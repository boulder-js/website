---
// Pre-render this page at build time (not on-demand)
export const prerender = true

import BaseLayout from '../layouts/BaseLayout.astro'
import { BackgroundImage } from '../components/BackgroundImage'
import { fetchUpcomingEvents, fetchPastEvents, getSpeakers, fetchTeamMembers } from '../lib/events.js'

// Build-time data fetching using gitevents-fetch
let events = []
let pastEvents = []
let speakers = []
let advocates = []
let members = []

try {
  // Fetch from GitHub using gitevents-fetch package
  events = await fetchUpcomingEvents()
  pastEvents = await fetchPastEvents()
  speakers = getSpeakers(events)
  advocates = await fetchTeamMembers('boulder-js', 'advocates')
  members = await fetchTeamMembers('boulder-js', 'members')
  console.log(`Fetched ${events.length} upcoming events, ${pastEvents.length} past events, ${speakers.length} speakers, ${advocates.length} advocates, and ${members.length} members`)
} catch (error) {
  console.error('Failed to fetch events:', error)
}
---

<BaseLayout title="BoulderJS - JavaScript Meetup in Boulder, Colorado">
  <!-- Hero Section -->
  <div class="relative py-20 sm:pt-36 sm:pb-24">
    <BackgroundImage className="-top-36 -bottom-14" client:load />
    <!-- Hero Content -->
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-4xl lg:px-12">
        <h1 class="text-5xl font-bold tracking-tighter text-blue-600 sm:text-7xl">
          <span class="sr-only">BoulderJS - </span>JavaScript Meetup in Boulder, Colorado
        </h1>
        <div class="mt-6 space-y-6 text-2xl tracking-tight text-blue-900">
          <p>
            Join the Boulder JavaScript community for monthly meetups featuring talks from local and visiting speakers, networking opportunities, and a chance to connect with fellow developers.
          </p>
          <p>
            Whether you're just starting out or you're a seasoned pro, BoulderJS welcomes all skill levels. Come share your knowledge, learn something new, and be part of Colorado's thriving tech community.
          </p>
        </div>

        <!-- RSVP Button -->
        <a
          href="https://luma.com/boulderjs"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-10 inline-flex justify-center rounded-2xl bg-blue-600 px-8 py-4 text-base font-semibold text-white hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:text-white/70 transition-colors"
        >
          RSVP to Next Event
        </a>

        <!-- Stats -->
        <dl class="mt-10 grid grid-cols-2 gap-x-10 gap-y-6 sm:mt-16 sm:gap-x-16 sm:gap-y-10 sm:text-center lg:auto-cols-auto lg:grid-flow-col lg:grid-cols-none lg:justify-start lg:text-left">
          <div>
            <dt class="font-mono text-sm text-blue-600">Schedule</dt>
            <dd class="mt-0.5 text-2xl font-semibold tracking-tight text-blue-900">
              Every 4th Thursday
            </dd>
          </div>
          <div>
            <dt class="font-mono text-sm text-blue-600">Location</dt>
            <dd class="mt-0.5 text-2xl font-semibold tracking-tight text-blue-900">
              Boulder, CO
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Schedule Section -->
  {events.length > 0 && (
    <section id="schedule" aria-labelledby="schedule-title" class="py-20 sm:py-32 bg-indigo-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="schedule-title"
            class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl"
          >
            Upcoming Schedule
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            Join us at our next meetup! We gather on the 4th Thursday of each month for talks and networking.
          </p>
        </div>

        <!-- Events Grid -->
        <div class="mt-14 grid grid-cols-1 gap-8 sm:mt-16 sm:grid-cols-2 lg:grid-cols-3">
          {events.slice(0, 6).map((event) => (
            <div class="flex flex-col">
              <!-- Date Header -->
              <h3 class="text-2xl font-semibold tracking-tight text-blue-900">
                {event.date ? event.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric' }) : 'TBA'}
              </h3>
              <p class="mt-4 text-base tracking-tight text-blue-900">
                {event.title}
              </p>

              <!-- Speaker Cards -->
              <div class="mt-10 space-y-8">
                {event.speakers && event.speakers.length > 0 ? (
                  event.speakers.map((speaker) => (
                    <div class="relative flex flex-col rounded-3xl bg-white px-6 py-8 shadow-md shadow-gray-900/5 group/card">
                      {speaker.avatarUrl && (
                        <img
                          src={speaker.avatarUrl}
                          alt={speaker.name}
                          class="absolute -top-4 left-6 h-14 w-14 rounded-xl object-cover transition-transform duration-300 group-hover/card:scale-105"
                        />
                      )}
                      <h4 class="mt-8 text-base font-semibold tracking-tight text-slate-900">
                        {speaker.name}
                      </h4>
                      <a
                        href={speaker.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-2 text-sm tracking-tight text-blue-900 hover:text-blue-600"
                      >
                        {speaker.talk}
                      </a>
                      {speaker.abstract && (
                        <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                          {speaker.abstract}
                        </p>
                      )}
                    </div>
                  ))
                ) : (
                  <div class="relative flex flex-col rounded-3xl bg-white px-6 py-8 shadow-md shadow-gray-900/5">
                    <p class="text-sm text-slate-600">
                      Speakers TBA
                    </p>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- RSVP CTA -->
        <div class="mt-14 text-center">
          <a
            href="https://luma.com/boulderjs"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex justify-center rounded-2xl bg-blue-600 px-8 py-4 text-base font-semibold text-white hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 active:text-white/70 transition-colors"
          >
            RSVP to Next Event
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Speakers Section -->
  {speakers.length > 0 && (
    <section id="speakers" aria-labelledby="speakers-title" class="py-20 sm:py-32">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="speakers-title"
            class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl"
          >
            Upcoming Speakers
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            Meet the talented developers and technologists sharing their knowledge with the Boulder JavaScript community.
          </p>
        </div>

        <!-- Speakers Grid -->
        <div class="mt-14 grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3">
          {speakers.map((speaker) => (
            <div class="group relative">
              <div class="flex items-start gap-4">
                <!-- Speaker Avatar -->
                {speaker.avatarUrl ? (
                  <img
                    src={speaker.avatarUrl}
                    alt={speaker.name}
                    class="h-16 w-16 flex-none rounded-xl object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                ) : (
                  <div class="h-16 w-16 flex-none rounded-xl bg-gradient-to-br from-blue-100 to-indigo-100 flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
                    <div class="text-xl font-bold text-blue-600">
                      {speaker.name.split(' ').map(n => n[0]).join('').substring(0, 2)}
                    </div>
                  </div>
                )}

                <div class="flex-auto">
                  <!-- Speaker Info -->
                  <h3 class="text-lg font-bold tracking-tight text-slate-900">
                    {speaker.name}
                  </h3>
                  {speaker.githubUrl && (
                    <a
                      href={speaker.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-blue-600 hover:text-blue-500"
                    >
                      @{speaker.login}
                    </a>
                  )}
                </div>
              </div>

              <!-- Talks -->
              {speaker.talks.map((talk) => (
                <div class="mt-4 pl-20">
                  <a
                    href={talk.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group/talk"
                  >
                    <p class="text-base tracking-tight text-slate-900 font-medium group-hover/talk:text-blue-600">
                      {talk.title}
                    </p>
                  </a>
                  {talk.abstract && (
                    <p class="mt-1 text-sm text-slate-600 line-clamp-2">
                      {talk.abstract}
                    </p>
                  )}
                  <p class="mt-1 text-sm text-slate-500">
                    {talk.date}
                  </p>
                </div>
              ))}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Upcoming Events Section -->
  {events.length > 3 && (
    <section id="events" aria-labelledby="events-title" class="py-20 sm:py-32">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="events-title"
            class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl"
          >
            All Upcoming Events
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            View our complete event schedule and join us for any of these upcoming meetups.
          </p>
        </div>

        <!-- Events List -->
        <div class="mt-14 space-y-8 sm:mt-16">
          {events.map((event) => (
            <div class="bg-white px-10 py-8 shadow-xl shadow-blue-900/5 backdrop-blur-sm rounded-2xl">
              <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                <div class="flex-auto">
                  <h3 class="text-2xl font-bold tracking-tight text-slate-900">
                    {event.title}
                  </h3>
                  <p class="mt-2 text-lg tracking-tight text-blue-600">
                    {event.dateString}
                  </p>
                </div>
                <a
                  href="https://luma.com/boulderjs"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-none inline-flex justify-center rounded-xl bg-blue-600 px-6 py-3 text-sm font-semibold text-white hover:bg-blue-500 transition-colors"
                >
                  RSVP
                </a>
              </div>

              {event.speakers && event.speakers.length > 0 && (
                <div class="mt-6">
                  <p class="text-sm font-semibold text-blue-900 uppercase tracking-wide">
                    {event.speakers.length} {event.speakers.length === 1 ? 'Talk' : 'Talks'}
                  </p>
                  <div class="mt-4 space-y-6">
                    {event.speakers.map((speaker) => (
                      <div class="flex gap-4 group/speaker">
                        {speaker.avatarUrl && (
                          <img
                            src={speaker.avatarUrl}
                            alt={speaker.name}
                            class="h-12 w-12 flex-none rounded-xl object-cover transition-transform duration-300 group-hover/speaker:scale-105"
                          />
                        )}
                        <div class="flex-auto">
                          <a
                            href={speaker.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group/talk"
                          >
                            <p class="font-semibold text-slate-900 group-hover/talk:text-blue-600">
                              {speaker.talk}
                            </p>
                          </a>
                          <p class="mt-1 text-sm text-slate-600">
                            by <span class="font-medium">{speaker.name}</span>
                            {speaker.githubUrl && (
                              <>
                                {' · '}
                                <a
                                  href={speaker.githubUrl}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="text-blue-600 hover:text-blue-500"
                                >
                                  @{speaker.login}
                                </a>
                              </>
                            )}
                          </p>
                          {speaker.abstract && (
                            <p class="mt-2 text-sm text-slate-600 line-clamp-3">
                              {speaker.abstract}
                            </p>
                          )}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              <a
                href={event.url}
                target="_blank"
                rel="noopener noreferrer"
                class="mt-6 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500"
              >
                View Event Details on GitHub
                <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Past Events Section -->
  {pastEvents.filter(e => e.speakers && e.speakers.length > 0).length > 0 && (
    <section id="past-events" aria-labelledby="past-events-title" class="py-20 sm:py-32">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="past-events-title"
            class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl"
          >
            Past Events
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            Check out what we've covered in previous BoulderJS meetups.
          </p>
        </div>

        <!-- Past Events Grid -->
        <div class="mt-14 grid grid-cols-1 gap-8 sm:mt-16 sm:grid-cols-2 lg:grid-cols-3">
          {pastEvents.filter(e => e.speakers && e.speakers.length > 0).slice(0, 6).map((event) => (
            <div class="flex flex-col">
              <!-- Date Header -->
              <h3 class="text-2xl font-semibold tracking-tight text-blue-900">
                {event.date ? event.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric' }) : event.dateString}
              </h3>
              <p class="mt-4 text-base tracking-tight text-blue-900">
                {event.title}
              </p>

              <!-- Speaker Cards -->
              <div class="mt-10 space-y-8">
                {event.speakers.map((speaker) => (
                  <div class="relative flex flex-col rounded-3xl bg-white px-6 py-8 shadow-md shadow-gray-900/5 group/card">
                    {speaker.avatarUrl && (
                      <img
                        src={speaker.avatarUrl}
                        alt={speaker.name}
                        class="absolute -top-4 left-6 h-14 w-14 rounded-xl object-cover transition-transform duration-300 group-hover/card:scale-105"
                      />
                    )}
                    <h4 class="mt-8 text-base font-semibold tracking-tight text-slate-900">
                      {speaker.name}
                    </h4>
                    <a
                      href={speaker.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="mt-2 text-sm tracking-tight text-slate-700 hover:text-blue-600"
                    >
                      {speaker.talk}
                    </a>
                    {speaker.githubUrl && (
                      <a
                        href={speaker.githubUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-1 text-xs text-blue-600 hover:text-blue-500"
                      >
                        @{speaker.login}
                      </a>
                    )}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Advocates Section -->
  {advocates.length > 0 && (
    <section id="advocates" aria-labelledby="advocates-title" class="py-20 sm:py-32">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="advocates-title"
            class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl"
          >
            Our Advocates
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            Meet the passionate community members who help organize and support BoulderJS events.
          </p>
        </div>

        <!-- Advocates Grid -->
        <div class="mt-14 grid grid-cols-1 gap-12 sm:mt-16 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {advocates.map((advocate) => (
            <div class="group relative">
              <div class="flex flex-col items-center text-center">
                <!-- Avatar -->
                {advocate.avatarUrl ? (
                  <img
                    src={advocate.avatarUrl}
                    alt={advocate.name || advocate.login}
                    class="h-32 w-32 rounded-2xl object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                ) : (
                  <div class="h-32 w-32 rounded-2xl bg-gradient-to-br from-blue-100 to-indigo-100 flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
                    <div class="text-3xl font-bold text-blue-600">
                      {(advocate.name || advocate.login).split(' ').map(n => n[0]).join('').substring(0, 2)}
                    </div>
                  </div>
                )}

                <!-- Name and Login -->
                <div class="mt-6">
                  <h3 class="text-lg font-bold tracking-tight text-slate-900">
                    {advocate.name || advocate.login}
                  </h3>
                  {advocate.name && advocate.login && (
                    <a
                      href={`https://github.com/${advocate.login}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="mt-1 text-sm text-blue-600 hover:text-blue-500"
                    >
                      @{advocate.login}
                    </a>
                  )}
                </div>

                <!-- Bio -->
                {advocate.bio && (
                  <p class="mt-3 text-sm text-slate-600 line-clamp-3">
                    {advocate.bio}
                  </p>
                )}

                <!-- Location and Company -->
                {(advocate.location || advocate.company) && (
                  <div class="mt-3 flex flex-wrap gap-2 justify-center text-xs text-slate-500">
                    {advocate.location && (
                      <span class="flex items-center gap-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        {advocate.location}
                      </span>
                    )}
                    {advocate.company && (
                      <span class="flex items-center gap-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        {advocate.company.replace('@', '')}
                      </span>
                    )}
                  </div>
                )}

                <!-- Social Links -->
                {advocate.websiteUrl && (
                  <div class="mt-4">
                    <a
                      href={advocate.websiteUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-blue-600 hover:text-blue-500 hover:underline"
                    >
                      Website
                    </a>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Members Section -->
  {members.length > 0 && (
    <section id="members" aria-labelledby="members-title" class="py-16 sm:py-24 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h2
            id="members-title"
            class="text-3xl font-medium tracking-tighter text-blue-600 sm:text-4xl"
          >
            Community Members
          </h2>
          <p class="mt-3 text-xl tracking-tight text-blue-900">
            Active members of the BoulderJS community.
          </p>
        </div>

        <!-- Members Grid -->
        <div class="mt-10 grid grid-cols-2 gap-8 sm:mt-12 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6">
          {members.map((member) => (
            <div class="group relative">
              <div class="flex flex-col items-center text-center">
                <!-- Avatar -->
                {member.avatarUrl ? (
                  <a
                    href={`https://github.com/${member.login}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={member.avatarUrl}
                      alt={member.name || member.login}
                      class="h-20 w-20 rounded-xl object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  </a>
                ) : (
                  <div class="h-20 w-20 rounded-xl bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
                    <div class="text-xl font-bold text-blue-600">
                      {(member.name || member.login).split(' ').map(n => n[0]).join('').substring(0, 2)}
                    </div>
                  </div>
                )}

                <!-- Name -->
                <div class="mt-3">
                  <a
                    href={`https://github.com/${member.login}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group/name"
                  >
                    <h3 class="text-sm font-semibold tracking-tight text-slate-900 group-hover/name:text-blue-600 line-clamp-2">
                      {member.name || member.login}
                    </h3>
                  </a>
                  {member.name && member.login && (
                    <p class="mt-1 text-xs text-slate-500">
                      @{member.login}
                    </p>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Community Links -->
  <section class="py-20 sm:py-32 bg-indigo-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-4xl">
        <div class="text-center">
          <h2 class="text-4xl font-medium tracking-tighter text-blue-600 sm:text-5xl">
            Join the Community
          </h2>
          <p class="mt-4 text-2xl tracking-tight text-blue-900">
            Connect with us on social media, join our Discord server, and stay up to date with the latest news and events.
          </p>
        </div>

        <!-- Social Links Grid -->
        <div class="mt-14 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <a
            href="https://github.com/boulder-js"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 rounded-2xl bg-white px-6 py-4 shadow-md shadow-gray-900/5 transition hover:shadow-lg hover:shadow-gray-900/10"
